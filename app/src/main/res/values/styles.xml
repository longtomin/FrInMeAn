<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />

    <style name="de_frinmean_style_TextOwnMsg" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:background">@drawable/bubble_green</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="de_frinmean_style_TextForeignMsg" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:background">@drawable/bubble_yellow</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="de_frinmean_style_ImageOwnMsg" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:background">@drawable/bubble_green</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="de_frinmean_style_ImageForeignMsg" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:background">@drawable/bubble_yellow</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
    </style>

</resources>
