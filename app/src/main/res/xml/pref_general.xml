    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_servername"
        android:inputType="textCapWords"
        android:key="prefServername"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_servername" />

    <EditTextPreference
        android:defaultValue="443"
        android:inputType="numberDecimal"
        android:key="prefServerport"
        android:maxLines="1"
        android:numeric="integer"
        android:title="@string/pref_title_serverport" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="prefHTTPSCommunication"
        android:switchTextOff="@string/pref_title_http"
        android:switchTextOn="@string/pref_title_https"
        android:title="@string/pref_title_communication" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="prefContentCommunication"
        android:switchTextOff="@string/pref_title_content_wifi_only"
        android:switchTextOn="@string/pref_title_content_always"
        android:title="@string/pref_title_content_communication" />

    <EditTextPreference
        android:defaultValue="@string/pref_default_contextroot"
        android:inputType="textCapWords"
        android:key="prefContextRoot"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_contextroot" />

