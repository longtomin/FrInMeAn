    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/pref_default_servername"
        android:inputType="textCapWords"
        android:key="prefServername"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_servername" />

    <Preference
        android:key="prefDirectory"
        android:title="@string/DirecotryChooser" />

    <Preference
        android:key="prefOwnImage"
        android:title="@string/SelectOwnImage" />

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textCapWords"
        android:key="prefUsername"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_username" />

    <EditTextPreference
        android:capitalize="words"
        android:inputType="textCapWords"
        android:key="prefPassword"
        android:maxLines="1"
        android:password="true"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_password" />
    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
