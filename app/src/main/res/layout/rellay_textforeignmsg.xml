<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/abc_text_size_display_2_material"
    android:paddingStart="@dimen/abc_text_size_display_1_material">

    <RelativeLayout
        android:id="@+id/TextMessageContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_yellow">

        <TextView
            android:id="@+id/TextOwningUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextSendTimeStamp"
            android:layout_alignLeft="@+id/TextTextMessage"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TextSendTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/TextOwningUserName"
            android:layout_toRightOf="@+id/TextOwningUserName"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="10dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/TextTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/TextOwningUserName"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textIsSelectable="true"
            android:textSize="11dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/TextReadTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextTextMessage"
            android:layout_span="2"
            android:inputType="none"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="10dp"
            android:textStyle="italic" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/user_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/TextMessageContainer"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:nestedScrollingEnabled="false"
        android:src="@drawable/iconuser" />

</LinearLayout>