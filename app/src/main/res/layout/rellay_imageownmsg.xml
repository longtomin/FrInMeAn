<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:padding="5dp">

    <ImageView
        android:id="@+id/user_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:nestedScrollingEnabled="false"
        android:src="@drawable/iconuser" />

    <RelativeLayout
        android:id="@+id/ImageMessageContainer"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/user_img"
        android:background="@drawable/bubble_green">

        <TextView
            android:id="@+id/ImageOwningUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/ImageImageButton"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ImageSendTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/ImageOwningUserName"
            android:layout_toRightOf="@+id/ImageOwningUserName"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="10dp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/ImageImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ImageSendTimeStamp"
            android:layout_centerInParent="true"
            android:maxHeight="200dp"
            android:maxWidth="200dp"
            android:minHeight="100dp"
            android:minWidth="100dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <TextView
            android:id="@+id/ImageReadTimeStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ImageImageButton"
            android:inputType="none"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="10dp"
            android:textStyle="italic" />
    </RelativeLayout>
</LinearLayout>