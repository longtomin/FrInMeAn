<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.radiohacks.frinmean">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:installLocation="preferExternal"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.radiohacks.frinmean.StartActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.radiohacks.frinmean.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="de.radiohacks.frinmean.ChatActivity"
            android:label="@string/title_activity_chat" />
        <activity
            android:name="de.radiohacks.frinmean.SignUpActivity"
            android:label="@string/title_activity_sign_up" />
        <activity
            android:name="de.radiohacks.frinmean.SingleChatActivity"
            android:label="@string/title_activity_single_chat"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name="net.rdrei.android.dirchooser.DirectoryChooserActivity" />

        <service
            android:name="de.radiohacks.frinmean.service.MeBaService"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name="de.radiohacks.frinmean.SingleChatActivity$SingleChatReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver88
            android:name="de.radiohacks.frinmean.ChatActivity$ListChatStateReceiver"
            android:enabled="true"
            android:exported="false" />
        <provider
            android:name=".providers.FrinmeanContentProvider"
            android:authorities="de.radiohacks.frinmean.providers.FrinmeanContentProvider" />
    </application>

</manifest>
